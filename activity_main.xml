<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="@string/homeWorkout"
            android:layout_width="250dp"
            android:layout_height="43dp"
            android:id="@+id/btnWork" android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginBottom="25dp" app:layout_constraintBottom_toTopOf="@+id/btnCal"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="15dp" android:layout_marginStart="15dp"/>
    <Button
            android:text="@string/homeCalorie"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnCal" android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/btnWork" android:layout_marginBottom="25dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/btnBMI"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
    <Button
            android:text="@string/homeBMI"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnBMI" android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/btnCal" android:layout_marginBottom="32dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
    <ImageView
            android:layout_width="274dp"
            android:layout_height="0dp" app:srcCompat="@drawable/wieght"
            android:id="@+id/imageView" android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/btnWork"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="54dp" android:layout_marginStart="54dp" android:layout_marginEnd="54dp"
            android:layout_marginRight="54dp"/>
</android.support.constraint.ConstraintLayout>